{
  "package": {
    "productName": "Kamyroll",
    "version": "../package.json"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": ["deb","msi", "app", "dmg"],
      "identifier": "com.nabil.kamyroll",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": ["proxy/pstream/main"],
      "copyright": "Kamyroll OSS 2022",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix" : {
          "language" : ["en-US", "fr-FR"]
        }
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "http": {
        "all": true,
        "scope": ["https://**", "http://**"]
      },
      "shell": {
        "sidecar": true,
        "execute": true,
        "scope": [
          {
            "name": "proxy/pstream/main",
            "sidecar": true
          },
          {
            "name": "mpv",
            "cmd": "mpv",
            "args": true
          }
        ]
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Kamyroll",
        "width": 1280,
        "height": 720,
        "center": true,
        "visible": false,
        "resizable": true,
        "label": "main"
      },
    {
      "label": "splashscreen",
      "width": 400,
      "height": 200,
      "decorations": false,
      "center": true,
      "url": "splashscreen.html"
    }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-inline' unsafe-eval localhost"
    }
  }
}
